// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  EMPLOYEE
  ADMIN
}

model User {
  id            String    @id @default(cuid())
  email         String    @unique
  passwordHash  String    @map("password_hash")
  name          String?
  roles         Role[]    @default([EMPLOYEE])
  createdAt     DateTime  @default(now()) @map("created_at")
  updatedAt     DateTime  @updatedAt @map("updated_at")

  timeEntries           TimeEntry[]
  chargeCodeAccess      EmployeeChargeCodeAccess[]

  @@map("users")
}

model ChargeCode {
  id          String    @id @default(cuid())
  code        String    @unique
  description String
  isActive    Boolean   @default(true) @map("is_active")
  createdAt   DateTime  @default(now()) @map("created_at")
  updatedAt   DateTime  @updatedAt @map("updated_at")

  timeEntries       TimeEntry[]
  employeeAccess    EmployeeChargeCodeAccess[]

  @@map("charge_codes")
}

// Future-proofing: Junction table for restricting charge code access per user
// Current logic defaults to allowing all users access to all active charge codes
model EmployeeChargeCodeAccess {
  id            String     @id @default(cuid())
  userId        String     @map("user_id")
  chargeCodeId  String     @map("charge_code_id")
  createdAt     DateTime   @default(now()) @map("created_at")

  user        User       @relation(fields: [userId], references: [id], onDelete: Cascade)
  chargeCode  ChargeCode @relation(fields: [chargeCodeId], references: [id], onDelete: Cascade)

  @@unique([userId, chargeCodeId])
  @@map("employee_charge_code_access")
}

model TimeEntry {
  id            String     @id @default(cuid())
  userId        String     @map("user_id")
  chargeCodeId  String     @map("charge_code_id")
  date          DateTime   @db.Date
  hours         Int        @db.SmallInt // Constrained to 1-7 at application layer
  createdAt     DateTime   @default(now()) @map("created_at")
  updatedAt     DateTime   @updatedAt @map("updated_at")

  user        User       @relation(fields: [userId], references: [id], onDelete: Cascade)
  chargeCode  ChargeCode @relation(fields: [chargeCodeId], references: [id], onDelete: Cascade)

  @@unique([userId, chargeCodeId, date])
  @@index([userId, date])
  @@map("time_entries")
}
